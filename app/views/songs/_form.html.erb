New Song Form

<% if @song.errors.any? %>
    <%= @song.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
        <% end %>
<% end %>

<%= form_for(@song) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>

<%= f.label :released %>
<%= f.check_box :released %><br>

<%= f.label :artist_name %>
<%= f.text_field :artist_name %><br>

<%= f.label :genre %>
<%= f.text_field :genre %><br>

<%= f.label :release_year %>
<%= f.select :release_year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1)  %><br>

<%= f.submit %>
    <% end %>